@inherits FieldBase

<MudDatePicker Date="@Date" DateChanged="@DateChanged" 
               Class="@Class" DateFormat="d" Label="@Label" PickerVariant="PickerVariant.Dialog"
               Validation="@Validation" MaxDate="DateTime.Today" />

@code {
    [Parameter]
    public DateTime? Date { get; set; }
    [Parameter]
    public EventCallback<DateTime?> DateChanged { get; set; }
    [Parameter]
    public string Label { get; set; }

    private Func<DateTime?, string> Validation = (date) =>
    {
        if (date is null)
        {
            return "Enter the correct date";
        }

        if (date > DateTime.Today)
        {
            return "The date must not be from the future";
        }

        return null;
    };
}
